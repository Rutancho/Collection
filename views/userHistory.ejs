<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lego Collection</title>
  <link rel="stylesheet" href="/css/main.css" />
</head>
<body tabindex="-1">
    
    <%- include('partials/navbar',{page: '/userHistory'}) %>
    
    <div class ="container mx-auto p-4">
        <div class = "hero bg-base-200 rounded-lg p-6">
            <div class = "max-w-md">
                <h1 class="text-5xl font-bold"><%= stack.user.userName %></h1>

                <p class ="py-6">user History: <%= stack.user.email %></p>
            </div>
        </div>     
    </div>

    <br>

    <table class = "table table-zebra">

        <thead>
            <tr>
                <th>Login Date/time</th>
                <th>Client Information</th>
            </tr>
        </thead>

        <tbody>
            <% stack.user.loginHistory.forEach(function(history) { %>
            <tr>
                <td><%= new Date(history.dateTime).toDateString() %> - <%= new Date(history.dateTime).toTimeString() %></td>
                <td><%= history.userAgent %></td>
            </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>